    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Scrape GitHub",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pycodesuggest/github-scraper/scraper.py",
            "console": "integratedTerminal", 
            "cwd": "${workspaceFolder}",
            "args": [
                "-u","paloukari",
                "-n","2000",
                "-s","'forks:<551'",
            ], 
            "env": {"LC_ALL":"C.UTF-8", 
                     "LANG":"C.UTF-8"}
        }
    ]
}